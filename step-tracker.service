[Unit]
Description=Step Tracker - Fetch and update Garmin step data
After=network.target

[Service]
Type=oneshot
User=pi
Group=pi
WorkingDirectory=/home/pi/step-tracker-2026
Environment=PATH=/home/pi/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/home/pi/.local/bin/uv run python update_steps.py
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target